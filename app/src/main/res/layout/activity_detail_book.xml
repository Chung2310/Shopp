<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F9F9">

    <!-- Nội dung chi tiết cuộn được -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/buttonAddToCart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgBook"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tên sách"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#333"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/txtPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Giá: 0Đ"
                android:textColor="#E53935"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="4dp" />

            <TextView android:id="@+id/txtAuthor" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Tác giả:" android:textSize="16sp" />
            <TextView android:id="@+id/txtPublisher" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="NXB:" android:textSize="16sp" />
            <TextView android:id="@+id/txtPublishedDate" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Ngày XB:" android:textSize="16sp" />
            <TextView android:id="@+id/txtGenre" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Thể loại:" android:textSize="16sp" />
            <TextView android:id="@+id/txtLanguage" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Ngôn ngữ:" android:textSize="16sp" />
            <TextView android:id="@+id/txtQuantity" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Số lượng:" android:textSize="16sp" />

            <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Mô tả:" android:textSize="18sp" android:textStyle="bold" android:layout_marginTop="12dp" />
            <TextView android:id="@+id/txtDescription" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Mô tả ở đây..." android:textSize="15sp" android:lineSpacingExtra="4dp" android:layout_marginTop="4dp" />
        </LinearLayout>
    </ScrollView>

    <!-- Nút cố định -->
    <Button
        android:id="@+id/buttonAddToCart"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="🛒 Thêm vào giỏ hàng"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:backgroundTint="#E53935"
        android:fontFamily="sans-serif-medium"
        android:layout_margin="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
