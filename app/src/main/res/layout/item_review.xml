<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/gb_bottom_purple"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Tên người dùng + Rating -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="4dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/avatarItemReview"
                android:layout_width="50dp"
                android:layout_height="50dp"/>

            <TextView
                android:layout_marginLeft="5dp"
                android:id="@+id/txtReviewerName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Nguyễn Văn A"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#000000" />

            <RatingBar
                android:id="@+id/ratingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:stepSize="0.5"
                android:rating="4.5"
                android:isIndicator="true"
                style="@style/Widget.AppCompat.RatingBar.Small" />
        </LinearLayout>

        <!-- Nội dung đánh giá -->
        <TextView
            android:id="@+id/txtReviewContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sách rất hay, nội dung dễ hiểu và trình bày đẹp."
            android:textSize="14sp"
            android:lineSpacingExtra="4dp"
            android:textColor="#444444" />

        <!-- Dòng chứa ngày đánh giá và tim -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:weightSum="1">

            <TextView
                android:id="@+id/txtReviewDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:text="29/07/2025"
                android:textSize="12sp"
                android:textColor="#888888" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:orientation="horizontal"
                android:gravity="end|center_vertical">

                <ImageView
                    android:id="@+id/imgHeart"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/love"
                    android:layout_marginEnd="4dp"
                    app:tint="@android:color/holo_red_light" />

                <TextView
                    android:id="@+id/txtHeartCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12"
                    android:textSize="12sp"
                    android:textColor="#888888" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>
