<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">
    <ImageView
        android:id="@+id/btnMore"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/more"
        android:layout_gravity="right"
        android:contentDescription="Menu"
        android:elevation="10dp"
        android:padding="4dp"
        android:clickable="true"
        android:focusable="true" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Tên người dùng + Rating -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="4dp">

            <ImageView
                android:id="@+id/avatarItemReview"
                android:layout_width="50dp"
                android:layout_height="50dp"/>

            <TextView
                android:layout_marginLeft="5dp"
                android:id="@+id/txtReviewerName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Nguyễn Văn A"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#000000" />

            <RatingBar
                android:id="@+id/ratingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:stepSize="0.5"
                android:rating="4.5"
                android:isIndicator="true"
                style="@style/Widget.AppCompat.RatingBar.Small" />
        </LinearLayout>

        <!-- Nội dung đánh giá -->
        <TextView
            android:id="@+id/txtReviewContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sách rất hay, nội dung dễ hiểu và trình bày đẹp."
            android:textSize="14sp"
            android:lineSpacingExtra="4dp"
            android:textColor="#444444" />

        <!-- Ngày đánh giá -->
        <TextView
            android:id="@+id/txtReviewDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="29/07/2025"
            android:textSize="12sp"
            android:textColor="#888888"
            android:layout_marginTop="6dp"
            android:gravity="end" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
